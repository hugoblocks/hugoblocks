  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "bootstrap": "^4.1.3",
    "chokidar": "^2.0.4",
    "chokidar-cli": "^1.2.1",
    "node-sass-chokidar": "^1.3.3"
  }
}
