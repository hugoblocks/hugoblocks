{
  "name": "hugoblocks",
  "version": "0.0.1",
  "private": true,
  "description": "Hugo Theme: Hugoblocks build-tools (bootstrap, sass)",
  "scripts": {
    "build": "node-sass-chokidar --source-map true ./src/main.scss -o ./static/css/",
    "watch": "chokidar 'src/**/*.scss' -c 'npm run build'"
